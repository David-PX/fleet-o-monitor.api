{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": [".eslintrc.js"],
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-console": "off",
    "arrow-parens": ["error", "always"],
    "comma-dangle": ["error", "always"],
    "prettier/prettier": [
      "error",
          {
            "endOfLine": "auto"
          }
    ]
  }
}
